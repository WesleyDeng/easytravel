<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<validator>
		<validator-id>mailValidator</validator-id>
		<validator-class>com.armandorv.easytravel.web.validator.MailValidator</validator-class>
	</validator>

	<navigation-rule>
		<from-view-id>/secured/myTravels.xhtml</from-view-id>
		<navigation-case id="startNewTravel">
			<from-outcome>startNewTravel</from-outcome>
			<to-view-id>/secured/newTravel.xhtml</to-view-id>
		 	<redirect/>	
		</navigation-case>
	</navigation-rule>

</faces-config>
